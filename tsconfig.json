{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "types": [
      "node",
      "@wdio/types",
      "@wdio/globals/types",
      "@wdio/cucumber-framework",
      "expect-webdriverio"
    ]
  },
  "include": [
    "config/**/*.ts",
    "tests/**/*.ts",
    "features/**/*.ts"
  ]
}
